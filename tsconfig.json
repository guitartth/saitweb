{
    "compilerOptions": {
        "module": "es6",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports" : true,
        "target": "es5",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "baseUrl": ".",
        "jsx": "react",
        "allowJs": true,
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": ["src/**/*"]
}